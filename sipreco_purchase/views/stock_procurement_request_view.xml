<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_procurement_request_tree" model="ir.ui.view">
        <field name="name">stock.procurement.request.tree</field>
        <field name="model">stock.procurement.request</field>
        <field name="inherit_id" ref="stock_procurement_request.view_procurement_request_tree"/>
        <field name="arch" type="xml">
            <field name="name" position="before">
                <field name="create_date" widget="date"/>
            </field>
            <field name="warehouse_id" position="replace"/>
            <field name="location_id" position="replace">
                <field name="route_id"/>
            </field>
        </field>
    </record>

    <record id="view_procurement_request_form" model="ir.ui.view">
        <field name="name">stock.procurement.request.form</field>
        <field name="model">stock.procurement.request</field>
        <field name="inherit_id" ref="stock_procurement_request.view_procurement_request_form"/>
        <field name="arch" type="xml">

            <!-- botones solo para solicitante -->
            <button name="%(procurement.procurement_action)d" position="attributes">
                <attribute name="groups">stock.group_stock_user</attribute>
            </button>
            <button name="%(stock.action_picking_tree_all)d" position="attributes">
                <attribute name="groups">stock.group_stock_user</attribute>
            </button>

            <xpath expr="//field[@name='procurement_ids']//field[@name='name']" position="attributes">
                <attribute name="invisible">0</attribute>
            </xpath>

            <xpath expr="//field[@name='procurement_ids']//field[@name='product_qty']" position="after">
                <field name="price_unit"/>
            </xpath>

            <xpath expr="//field[@name='procurement_ids']//field[@name='state']" position="after">
                <field name="manual_requisition_id"/>
            </xpath>

            <!-- <div name="button_box" position="attributes">
                <attribute name="groups">base.group_no_one</attribute>
            </div> -->

            <field name="name" position="attributes">
                <attribute name="readonly">1</attribute>
            </field>

            <field name="name" position="after">
                <field name="partner_id" readonly="True"/>
            </field>

            <field name="move_dest_id" position="attributes">
                <attribute name="groups">base.group_no_one</attribute>
            </field>

            <field name="warehouse_id" position="attributes">
                <attribute name="groups">base.group_no_one</attribute>
            </field>

            <field name="location_id" position="attributes">
                <attribute name="groups">base.group_no_one</attribute>
            </field>

            <!-- reemplazamos y usamos m2o porque queremos que seleccionen uno sol -->
            <field name="route_ids" position="attributes">
                <attribute name="groups">base.group_no_one</attribute>
            </field>
            <field name="route_ids" position="after">
                <field name="route_id" required="True" attrs="{'readonly': [('procurement_ids', '!=', [])]}"/>
            </field>

            <field name="date_planned" position="attributes">
                <attribute name="groups">base.group_no_one</attribute>
            </field>

            <field name="priority" position="attributes">
                <attribute name="groups">base.group_no_one</attribute>
            </field>

            <field name="group_id" position="attributes">
                <attribute name="groups">base.group_no_one</attribute>
            </field>

            <!-- permitimos consumibles y filtramos por ruta del request -->
            <field name="product_id" position="attributes">
                <attribute name="domain">[('type', 'in', ['product', 'consu']), ('route_ids', 'in', route_ids and route_ids[0][2] or [])]</attribute>
            </field>
        </field>
    </record>

    <record id="action_procurement_request" model="ir.actions.act_window">
        <field name="name">Procurement Requests</field>
        <field name="res_model">stock.procurement.request</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_my_procurement_request" model="ir.actions.act_window">
        <field name="name">My Procurement Requests</field>
        <field name="res_model">stock.procurement.request</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('partner_id.user_ids', '=', uid)]</field>
    </record>

    <menuitem action="action_my_procurement_request" id="menu_my_procurement_request" web_icon="sipreco_purchase,static/description/procurement_order.png" sequence="20"/>

</odoo>
