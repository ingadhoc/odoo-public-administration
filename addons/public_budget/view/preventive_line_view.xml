<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- SEARCH VIEW -->
        <record id="view_public_budget_preventive_line_filter" model="ir.ui.view">
            <field name="name">public_budget.preventive_line.select</field>
            <field name="model">public_budget.preventive_line</field>
            <field name="arch" type="xml">
                <search string="Preventive Line">
                    <field name="account_id" string="Account"
                            />
                    <field name="preventive_amount" string="Preventive"
                            />
                    <field name="budget_id" string="Budget"
                            />
                    <field name="budget_position_id" string="Budget Position"
                            />
                    <group expand="0" string="Group By">
                    </group>
                </search>
            </field>
        </record>

        <!-- FORMVIEW -->
        <record id="view_public_budget_preventive_line_form" model="ir.ui.view">
            <field name="name">public_budget.preventive_line.form</field>
            <field name="model">public_budget.preventive_line</field>
            <field name="arch" type="xml">
                <form string="Preventive Line">
                    <header>
                    </header>
                    <sheet string="Preventive Line">
                        <field name="available_account_ids" invisible="1"/>
                       <div class="oe_right oe_button_box" name="buttons">
                       </div>
                     <group string="Preventive Line">
                        <field name="budget_id" options="{'no_create': True}"
                        /> 
                        <field name="budget_position_id" options="{'no_create': True}"
                        /> 
                        <field name="account_id"
                            attrs="{'required':[('advance_line','=',False)],'invisible':[('advance_line','=',True)]}" options="{'no_create': True}"
                            /> 
                        <field name="preventive_amount"
                            /> 
                        <field name="advance_line"
                            invisible="True"
                            /> 
                        <field name="remaining_amount"
                            invisible="True"
                            /> 
                        <field name="state"
                            invisible="True"
                            /> 
                     </group>
                     <group string="Definitive Lines" attrs="{'invisible':[('advance_line','=',True)]}">
                        <field name="definitive_line_ids"
                                nolabel="1"
                                context="{'from_preventive':True,'default_amount':remaining_amount}"/>
                     </group>
                    </sheet>

                </form>
            </field>
        </record>

        <!-- TREEVIEW -->
        <record id="view_public_budget_preventive_line_tree" model="ir.ui.view">
            <field name="name">public_budget.preventive_line.tree</field>
            <field name="model">public_budget.preventive_line</field>
            <field name="arch" type="xml">
                <tree string="Preventive Line"
                    colors="green:preventive_amount==definitive_amount==to_pay_amount==paid_amount;"
                    >
                    <field name="budget_id"
                        />
                    <field name="budget_position_id"
                        />
                    <field name="preventive_amount"
                            sum="Total"
                        />
                    <field name="definitive_amount"
                            sum="Total"
                        />
                    <field name="invoiced_amount"
                            sum="Total"
                            invisible="'advance_line' in context"
                        />
                    <field name="to_pay_amount"
                            sum="Total"
                        />
                    <field name="paid_amount"
                            sum="Total"
                        />
                    <field name="state"
                            invisible="True"
                        />
                </tree>
            </field>
        </record>

    </data>
</openerp>
