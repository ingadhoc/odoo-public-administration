<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="view_account_asset_search" model="ir.ui.view">
        <field name="name">account.asset.asset.search</field>
        <field name="model">account.asset.asset</field>
        <field name="inherit_id" ref="account_asset.view_account_asset_search"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="expedient_id"/>
                <field name="invoice_id"/>
                <field name="reference"/>
                <field name="enrollment"/>
                <field name="serial_number"/>
            </field>
            <group>
                <filter string="Invoice" name="invoice" domain="[]" context="{'group_by':'invoice_id'}"/>
            </group>
        </field>
    </record>

    <!-- FORMVIEW -->
    <record id="view_account_asset_asset_form" model="ir.ui.view">
        <field name="name">account.asset.asset.form</field>
        <field name="model">account.asset.asset</field>
        <field name="inherit_id" ref="account_asset.view_account_asset_asset_form"/>
        <field name="arch" type="xml">
            <notebook position="attributes">
                <attribute name="groups">base.group_no_one</attribute>
            </notebook>
            <div name="button_box">
                <field name="transaction_ids" invisible="1"/>
                <button type="object" name="action_view_transaction" class="oe_stat_button" string="Transactions" icon="fa-list-alt" attrs="{'invisible': [('transaction_ids', '=', [])]}"/>
            </div>
            <field name="date" position="after">
                <field name="enrollment"/>
                <field name="reference"/>
                <field name="serial_number"/>
                <field name="asset_state"/>
                <field name="observations"/>
                <field name="level"/>
                <field name="number"/>
                <field name="location_id" required="1" attrs="{'readonly':[('location_id', '!=', False), ('state', 'in', ['open', 'paid'])]}" force_save="1"/>
                <field name="expedient_id" required="1"/>
                <field name="user_id"/>
                <field name="transit"/>
            </field>
            <field name="invoice_id" position="attributes">
                <attribute name="domain">[('partner_id', '=', partner_id)]</attribute>
            </field>
            <button name="compute_depreciation_board" position="attributes">
                <attribute name="groups">base.group_no_one</attribute>
            </button>
            <button name="%(account_asset.action_asset_modify)d" position="attributes">
                <attribute name="groups">base.group_no_one</attribute>
            </button>
            <button name="set_to_close" position="attributes">
                <attribute name="groups">base.group_no_one</attribute>
            </button>
            <notebook position="attributes">
                <attribute name="groups">base.group_no_one</attribute>
            </notebook>
            <button name="open_entries" position="attributes">
                <attribute name="groups">base.group_no_one</attribute>
            </button>
            <button name="compute_depreciation_board" position="after">
                <field name="visible_button_transfer_asset" invisible="1"/>
                <button name="transfer_asset" type="object" attrs="{'invisible':['|',('visible_button_transfer_asset', '=', False), ('transit', '=', True)]}" string="Transfer Asset"/>
                <button name="confirm_tranfer" type="object" attrs="{'invisible':['|',('visible_button_transfer_asset', '=', False),('transit', '!=', True)]}" string="Confirm Transfer Asset"/>
            </button>
            <field name="message_follower_ids" position="after">
                <field name="activity_ids" widget="mail_activity"/>
            </field>
            <field name="invoice_id" position="after">
                <field name="comodato"/>
                <field name="patrimonial"/>
                <field name="reportable"/>
            </field>
        </field>
    </record>

    <menuitem name="Asset" id="menu_asset" groups="group_asset_usuario,public_budget.group_portal_asset" web_icon="public_budget,static/description/asset-icon.png" sequence="40"/>

    <menuitem id="menu_account_asset" name="Assets" parent="menu_asset" sequence="2" action="account_asset.action_account_asset_asset_form"/>
    <menuitem id="menu_account_type_asset" name="Assets Types" parent="menu_asset" sequence="3" action="account_asset.action_account_asset_asset_list_normal_purchase"/>

</odoo>
