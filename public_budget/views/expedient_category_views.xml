<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <!-- SEARCH VIEW -->
        <record id="view_public_budget_expedient_category_filter" model="ir.ui.view">
            <field name="name">public_budget.expedient_category.select</field>
            <field name="model">public_budget.expedient_category</field>
            <field name="arch" type="xml">
                <search string="Expedient Category">
                    <field name="name"/>
                    <group expand="0" string="Group By">
                    </group>
                </search>
            </field>
        </record>

        <!-- FORMVIEW -->
        <record id="view_public_budget_expedient_category_form" model="ir.ui.view">
            <field name="name">public_budget.expedient_category.form</field>
            <field name="model">public_budget.expedient_category</field>
            <field name="arch" type="xml">
                <form string="Expedient Category">
                    <header>
                    </header>
                    <sheet string="Expedient Category">
                       <div class="oe_button_box" name="buttons">
                       </div>
                     <group>
                        <field name="name"/>
                     </group>
                    </sheet>

                </form>
            </field>
        </record>

        <!-- TREEVIEW -->
        <record id="view_public_budget_expedient_category_tree" model="ir.ui.view">
            <field name="name">public_budget.expedient_category.tree</field>
            <field name="model">public_budget.expedient_category</field>
            <field name="arch" type="xml">
                <tree string="Expedient Category"
                    >
                    <field name="name"/>
                </tree>
            </field>
        </record>

</odoo>
