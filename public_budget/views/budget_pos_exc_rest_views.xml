<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <!-- SEARCH VIEW -->
        <record id="view_public_budget_budget_pos_exc_rest_filter" model="ir.ui.view">
            <field name="name">public_budget.budget_pos_exc_rest.select</field>
            <field name="model">public_budget.budget_pos_exc_rest</field>
            <field name="arch" type="xml">
                <search string="Budget Position Exchange Restriction">
                    <field name="origin_category_id"/>
                    <field name="destiny_category_id" />
                    <field name="type"/>
                    <field name="message"/>
                    <group expand="0" string="Group By">
                    </group>
                </search>
            </field>
        </record>

        <!-- FORMVIEW -->
        <record id="view_public_budget_budget_pos_exc_rest_form" model="ir.ui.view">
            <field name="name">public_budget.budget_pos_exc_rest.form</field>
            <field name="model">public_budget.budget_pos_exc_rest</field>
            <field name="arch" type="xml">
                <form string="Budget Position Exchange Restriction">
                    <header>
                    </header>
                    <sheet string="Budget Position Exchange Restriction">
                       <div class="oe_button_box" name="buttons">
                       </div>
                     <group>
                        <field name="origin_category_id"/> 
                        <field name="destiny_category_id"/> 
                        <field name="type"/> 
                        <field name="message"/> 
                     </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- TREEVIEW -->
        <record id="view_public_budget_budget_pos_exc_rest_tree" model="ir.ui.view">
            <field name="name">public_budget.budget_pos_exc_rest.tree</field>
            <field name="model">public_budget.budget_pos_exc_rest</field>
            <field name="arch" type="xml">
                <tree string="Budget Position Exchange Restriction"
                    >
                    <field name="origin_category_id"/>
                    <field name="destiny_category_id"/>
                    <field name="type"/>
                    <field name="message"/>
                </tree>
            </field>
        </record>

</odoo>
