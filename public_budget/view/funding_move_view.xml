<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- SEARCH VIEW -->
        <record id="view_public_budget_funding_move_filter" model="ir.ui.view">
            <field name="name">public_budget.funding_move.select</field>
            <field name="model">public_budget.funding_move</field>
            <field name="arch" type="xml">
                <search string="Funding Move">
                    <field name="date"/>
                    <field name="name"/>
                    <field name="type"/>
                    <field name="journal_id"/>
                    <group expand="0" string="Group By">
                    </group>
                </search>
            </field>
        </record>

        <!-- FORMVIEW -->
        <record id="view_public_budget_funding_move_form" model="ir.ui.view">
            <field name="name">public_budget.funding_move.form</field>
            <field name="model">public_budget.funding_move</field>
            <field name="arch" type="xml">
                <form string="Funding Move">
                    <header>
                        <button name="sgn_confirm"
                            states="draft"
                            string="Confirm"/>
                        <button name="action_cancel_draft"
                            type="object"
                            states="cancel"
                            string="To Draft"/>
                        <button name="sgn_cancel"
                            states="confirmed,draft"
                            string="Cancel"
                            groups="base.group_no_one"/>
                        <field name="state" widget="statusbar"
                            statusbar_colors='{}'/>
                    </header>
                    <sheet string="Funding Move">
                       <div class="oe_right oe_button_box" name="buttons">
                       </div>
                     <group>
                        <field name="date"/> 
                        <field name="name"/> 
                        <field name="type"/> 
                        <field name="journal_id"/> 
                        <field name="amount"/> 
                        <field name="move_id"/> 
                        <field name="budget_id"
                            required="'from_budget' not in context"
                            invisible="'from_budget' in context"/> 
                     </group>
                    </sheet>

                </form>
            </field>
        </record>

        <!-- TREEVIEW -->
        <record id="view_public_budget_funding_move_tree" model="ir.ui.view">
            <field name="name">public_budget.funding_move.tree</field>
            <field name="model">public_budget.funding_move</field>
            <field name="arch" type="xml">
                <tree string="Funding Move"
                    colors="grey:state=='cancelled';blue:state in (u'draft',);black:state in (u'confirmed',);red:state in ()"
                    >
                    <field name="date"/>
                    <field name="name"/>
                    <field name="type"/>
                    <field name="journal_id"/>
                    <field name="amount"/>
                    <field name="move_id"/>
                    <field name="budget_id"
                            invisible="'from_budget' in context"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

    </data>
</openerp>
