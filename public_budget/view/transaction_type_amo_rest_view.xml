<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- SEARCH VIEW -->
        <record id="view_public_budget_transaction_type_amo_rest_filter" model="ir.ui.view">
            <field name="name">public_budget.transaction_type_amo_rest.select</field>
            <field name="model">public_budget.transaction_type_amo_rest</field>
            <field name="arch" type="xml">
                <search string="Transaction Type Amount Restriction">
                    <field name="date"/>
                    <field name="from_amount"/>
                    <field name="to_amount"/>
                    <group expand="0" string="Group By">
                    </group>
                </search>
            </field>
        </record>

        <!-- FORMVIEW -->
        <record id="view_public_budget_transaction_type_amo_rest_form" model="ir.ui.view">
            <field name="name">public_budget.transaction_type_amo_rest.form</field>
            <field name="model">public_budget.transaction_type_amo_rest</field>
            <field name="arch" type="xml">
                <form string="Transaction Type Amount Restriction">
                    <field name="currency_id" invisible="1"/> 
                    <header>
                    </header>
                    <sheet string="Transaction Type Amount Restriction">
                       <div class="oe_button_box" name="buttons">
                       </div>
                     <group>
                        <field name="date"/> 
                        <field name="from_amount"/> 
                        <field name="to_amount"/> 
                     </group>
                    </sheet>

                </form>
            </field>
        </record>

        <!-- TREEVIEW -->
        <record id="view_public_budget_transaction_type_amo_rest_tree" model="ir.ui.view">
            <field name="name">public_budget.transaction_type_amo_rest.tree</field>
            <field name="model">public_budget.transaction_type_amo_rest</field>
            <field name="arch" type="xml">
                <tree string="Transaction Type Amount Restriction"
                    >
                    <field name="date"/>
                    <field name="from_amount"/>
                    <field name="to_amount"/>
                    <field name="currency_id" invisible="1"/> 
                </tree>
            </field>
        </record>

    </data>
</odoo>
