<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- SEARCH VIEW -->
        <record id="view_public_budget_budget_position_category_filter" model="ir.ui.view">
            <field name="name">public_budget.budget_position_category.select</field>
            <field name="model">public_budget.budget_position_category</field>
            <field name="arch" type="xml">
                <search string="Budget Position Category">
                    <field name="name"/>
                    <group expand="0" string="Group By">
                    </group>
                </search>
            </field>
        </record>

        <!-- FORMVIEW -->
        <record id="view_public_budget_budget_position_category_form" model="ir.ui.view">
            <field name="name">public_budget.budget_position_category.form</field>
            <field name="model">public_budget.budget_position_category</field>
            <field name="arch" type="xml">
                <form string="Budget Position Category">
                    <header>
                    </header>
                    <sheet string="Budget Position Category">
                       <div class="oe_button_box" name="buttons">
                       </div>
                     <group>
                        <field name="name"/> 
                     </group>
                    </sheet>

                </form>
            </field>
        </record>

        <!-- TREEVIEW -->
        <record id="view_public_budget_budget_position_category_tree" model="ir.ui.view">
            <field name="name">public_budget.budget_position_category.tree</field>
            <field name="model">public_budget.budget_position_category</field>
            <field name="arch" type="xml">
                <tree string="Budget Position Category"
                    >
                    <field name="name"/>
                </tree>
            </field>
        </record>

    </data>
</openerp>
